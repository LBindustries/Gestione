<html>
  <head>
    <title>Elenco Consegne - Gestione</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{css}}">
  </head>
  <body>
    {% include 'nav.html.j2' %}
    <div class="container">
      <h1>
         Consegne
      </h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Data</th>
            <th>Ispeziona</th>
            <th>Download</th>
            <th>Modifica</th>
            <th>Elimina</th>
          </tr>
        </thead>
        {% for consegna in consegne %}
          <tr>
            <td>{{ consegna.cnome }}</td>
            <td>{{ consegna.cdata }}</td>
            <td><a href="/consegne_script_inspect/{{ consegna.cid }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td><a href="/home/server/files/{{ consegna.clink }}"><span class="glyphicon glyphicon-download-alt"></span></a></td>
            <td><a href="/consegne_show/{{ consegna.cid }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
            <td><a href="/consegne_del/{{ consegna.cid }}"><span class="glyphicon glyphicon-remove"></span></a></td>
          </tr>
        {% endfor %}
      </table>
      <a class="btn btn-success" href="/consegne_add">Aggiungi</a>
    </div>
  </body>
</html>
