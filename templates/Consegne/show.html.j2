<html>
  <head>
    <title>Modifica consegna - Gestione</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{css}}">
  </head>
  <body>
    {% include 'nav.html.j2' %}
    <div class="container">
      <h1>
         Modifica consegna
      </h1>
      <form class="form-outline" action="/consegne_show/{{consegna.rid}}" method="post">
        <input class="form-control" type="text" placeholder="Nome" name="cnome" value="{{ consegna.cnome }}">
        <p> </p>
        <input class="form-control" type="text" placeholder="data" name="cdata" value="{{ consegna.cdata }}">
        <p> </p>
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon3">/home/server/files/</span>
          <input class="form-control" type="text" placeholder="Percorso del file su macchina virtuale" name="clink" value="{{ consegna.clink }}">
        </div>
        <p> </p>
        <textarea class="form-control" placeholder="Metti il tuo script qui" name="cscript" value="{{ consegna.cscript }}"> </textarea>
        <p> </p>
        <input class="form-control" type="submit">
      </form>
   </div>
  </body>
</html>
