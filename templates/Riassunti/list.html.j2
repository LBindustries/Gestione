<html>
  <head>
    <title>Elenco Riassunti - Gestione</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{css}}">
  </head>
  <body>
    {% include 'nav.html.j2' %}
    <div class="container">
      <h1>
         Riassunti esistenti
      </h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Materia</th>
            <th>Descrizione</th>
            <th>Download</th>
            <th>Modifica</th>
            <th>Elimina</th>
          </tr>
        </thead>
        {% for riassunto in riassunti %}
          <tr>
            <td>{{ riassunto.rnome }}</td>
            <td>{{ riassnto.rmateria }}</td>
            <td>{{ riassnto.rdescrizione }}</td>
            <td><a href="{{ riassunto.rlink }}"><span class="glyphicon glyphicon-download-alt"></span></a></td>
            <td><a href="/riassunti_show/{{ riassunto.rid }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
            <td><a href="/riassunti_del/{{ riassunto.rid }}"><span class="glyphicon glyphicon-remove"></span></a></td>
          </tr>
        {% endfor %}
      </table>
      <a class="btn btn-success" href="/riassunti_add">Aggiungi</a>
    </div>
  </body>
</html>
